<div class="text-white px-4 p-2 border my-2 rounded border-success" data-toggle="collapse" data-target="#multiCollapseExample<%= comment.id %>">
  <div class="row align-items-center justify-content-between px-4">
    <div class="row ">
      <div><%=t("review.name") %></div>
      <div>:<%= comment.user.full_name %></div>
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-between"><h5><%= comment.content %></h5>
   <%= time_ago_in_words comment.created_at %> ago</div>
</div>
<div class="col">
  <div class="collapse multi-collapse" id="multiCollapseExample<%= comment.id %>">
    <div id="replies-<%= comment.id %>">
    </div>
    <div class="card-body">
      <div class="form-group" id="reply-form-<%= comment.id %>">
        <%= render partial: "replices/form", locals: {comment:} %>
      </div>
    </div>
  </div>
</div>
