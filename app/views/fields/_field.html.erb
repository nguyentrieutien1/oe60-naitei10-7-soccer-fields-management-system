<div class="col-md-4 p-2">
  <div class="post-entry">
    <%= link_to field_path(field) do %>
      <%= image_tag field.image if field.image.attached? %>
      <div class="caption">
        <div class="caption-inner">
          <h3 class="mb-3"><%= field.name %></h3>
          <div class="author d-flex align-items-center">
            <div class="text">
              <h4>
                <%= field.address %>
              </h4>
              <span>
              <%= field.phone_number %>
            </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
