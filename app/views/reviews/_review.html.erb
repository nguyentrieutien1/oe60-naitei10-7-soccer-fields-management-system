<div class="text-white px-4 p-2 border my-2 rounded border-danger" data-toggle="collapse" data-target="#multiCollapseExample<%= review.id %>">
  <div class="row align-items-center justify-content-between px-4">
    <div class="row ">
      <div class="row">
        <div><%= t("review.name") %>:</div>
        <div class=""><%= review.user.full_name %></div>
      </div>

    </div>
    <ul class="ratingW2 float-right row">
      <% review.rating.times do |i| %>
        <li>
          <div class="star">
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="d-flex align-items-center justify-content-between">
    <h5 class=""><%= review.content %></h5>
    <% if review.comments.count > 0 %>
      <div class="d-flex align-items-center">
        <i class="fa-regular fa-comments h5 mr-2"></i>
        <div class="h5">
          <%= review.comments.count %>
        </div>
      </div>
    <% end %>
    <div class="">
      <%= time_ago_in_words review.created_at %> ago
    </div>
  </div>
</div>
<div class="col">
  <div class="collapse multi-collapse" id="multiCollapseExample<%= review.id %>">
    <div id="comment-<%= review.id %>">
      <%= render review.comments %>
    </div>
    <div class="card-body">
      <div class="form-group">
        <%= form_for review, url: comments_path, method: :post do %>
          <label for="exampleFormControlTextarea1"></label>
          <textarea name="content" class="form-control text-white" id="exampleFormControlTextarea1" rows="3"></textarea>
          <input id="selected" name="review_id" type="hidden" value="<%= review.id %>"/>
          <input id="selected" name="dom_id" type="hidden" value="comment-<%= review.id %>"/>
          <button type="submit" class="btn btn-success mt-2 float-right"><%= t("button.comment") %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>
