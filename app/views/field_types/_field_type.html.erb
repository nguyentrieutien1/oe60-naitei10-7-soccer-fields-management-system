<div class="col-lg-4 mb-4" id="favorite-<%= field_type.id %>">
  <div class="custom-media d-block">
    <div class="img mb-4">
      <%= link_to field_type_path(field_type) do %>
        <img src="<%= asset_path("img_1.jpg") %>" alt="Image" class=" card-img-top" style="height: 150px; object-fit: cover">
      <% end %>
    </div>
    <div class="text">
      <div class="d-flex align-items-center justify-content-between">
        <div class="<%= "my-3 px-2 py-1 badge badge-#{field_type_status(field_type)}" %>"><%= field_type_label_button_status(field_type) %></div>
        <% if is_show_booking_button %>
          <%= button_to favorite_field_types_path, method: :post, class: "bg-transparent", params: { field_type_id: field_type.id, dom_id: "favorite-#{field_type.id}" }, remote: true do %>
            <i class="<%= "#{check_is_user_favorited?(field_type)} fa-heart text-danger h3" %>"></i>
          <% end %>
        <% end %>
      </div>
      <h3 class="mb-4"><%= field_type.field_type_name %></h3>
      <h5 class=""><%= "#{map_with_time_of_day(field_type.prices).price} #{Settings.CURRENCY}" %></h5>
      <%= is_show_booking_button ? link_to(t("button.booking"), field_type_path(field_type), class: "btn btn-danger") : "" %>
    </div>
  </div>
</div>
